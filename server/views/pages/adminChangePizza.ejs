<main class="container my-5">
    <h2 class="text-center">Modifica una Pizza nel Menu</h2>
    
    <form action="/admin/modifica/change" method="post" class="bg-light p-4 rounded shadow">
        <div class="form-group">
            <label for="pizzaNome">Quale pizza vuoi modificare?</label>
            <select id="pizzaNome" name="pizzaNome" class="form-control" required>
                <option value="" disabled selected>Seleziona una pizza</option>
                <% pizze.forEach(pizza => { %>
                    <option value="<%= pizza.nome %>"><%= pizza.nome %></option>
                <% }); %>
            </select>
        </div>

        <div class="form-group">
            <label for="nome">Nuovo Nome</label>
            <input type="text" class="form-control" name="nome" id="nome" required>
        </div>

        <div class="form-group">
            <label for="prezzo">Nuovo Prezzo (â‚¬)</label>
            <input type="number" class="form-control" name="prezzo" id="prezzo" required>
        </div>

        <div class="form-group">
            <label for="ingredienti">Nuovi Ingredienti</label>
            <input type="text" class="form-control" name="ingredienti" id="ingredienti" required>
        </div>

        <div class="text-center">
            <input type="submit" value="Modifica la pizza nel menu" class="btn btn-primary">
        </div>
    </form>

    <div class="text-center mt-4">
        <button class="btn btn-secondary">
            <a href="/admin/modifica" class="text-white">Torna indietro</a>
        </button>
    </div>
</main>
